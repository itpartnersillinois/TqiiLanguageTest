@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}
<h1>TQII Language test</h1>

<p>Welcome to the TQII Language test. Before you take the test, please validate that your speakers and microphone is working properly.</p>
<div>
    <a href="/TestSpeaker" class="il-button" id="continue">Check your speakers and microphone</a>
</div>

@if (Model.Guid == null || Model.Guid == Guid.Empty)
{
    <p>You do not have any tests available at this time.</p>

} else {
    <p>If you want to, you may skip the hardware check / sample questions and start the test immediately.</p>
    <div>
        <a href="/Starting?id=@Model.Guid" class="il-button" id="continue">Start test</a>
    </div>

}
