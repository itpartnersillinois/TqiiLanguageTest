@page
@model TqiiLanguageTest.Pages.Reviewer.TestUserModel
@{
}
@{
    ViewData["Title"] = "List Answers for Ratings";
}

<h1>Review Answers</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                Order
            </th>
            <th>
                Question
            </th>
            <th>Rubric Score</th>
            <th>Review</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Answers)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.OrderBy)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Question.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RubricInformation)
                </td>
                <td>
                    <a href="/reviewer/review?id=@item.Id">Review</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="form-group">
    <a href="Index" class="il-button">Back To List of Tests</a>
</div>

