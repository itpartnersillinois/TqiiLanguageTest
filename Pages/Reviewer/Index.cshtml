@page
@model TqiiLanguageTest.Pages.Reviewer.IndexModel

@{
    ViewData["Title"] = "List Test Users for Ratings";
}

<h1>List Test Users</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                Email
            </th>
            <th>
                Test
            </th>
            <th>Start</th>
            <th>End</th>
            <th>Review</th>
            <th>Download</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.TestUser)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Test.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DateTimeStart)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DateTimeEnd)
                </td>
                <td>
                    <a href="/reviewer/testuser?id=@item.Id">Review</a>
                </td>
                <td>
                    <a href="/audioanswerdownload/@item.Id">Download Data</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="form-group">
    <a href="../Admin" class="il-button">Admin Area</a>
</div>

