@page
@model TqiiLanguageTest.Pages.Admin.ListTestModel

@{
    Layout = "_Admin";
    ViewData["Title"] = "Tests";
}

<h1>Tests</h1>

<div class="ils-input-entry form-group">
    <label for="TestUser_Language" class="control-label">Choose a Language</label>
    <select asp-for="Language" class="ils-input-long" asp-items="ViewBag.Languages" onchange="window.location = '/admin/ListTest?language=' + this.value"></select>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                Test Title
            </th>
            <th>
                Language
            </th>
            <th>
                Number of Questions
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Test) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Language)
                </td>
                <td>
                @Html.DisplayFor(modelItem => item.NumberQuestions)
            </td>
            <td>
                <a asp-page="./CreateTest" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./CreateQuestion" asp-route-id="@item.Id">Add Questions</a>
            </td>
        </tr>
}
    </tbody>
</table>

<div>
    <a href="/Admin">Back to Admin Page</a>
</div>
