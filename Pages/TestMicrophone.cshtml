@page
@model TqiiLanguageTest.Pages.TestMicrophoneModel
@{
    ViewData["Title"] = "Microphone Test";
}
<h1>Microphone Test</h1>
<p>
    Please click "Start Recording" and record the following sentence during the mic test: <em>I can hear myself from the recording playback. If the playback is not successful, it may result in invalidation of the test.</em>
</p>

<div>
    <button id="record" class="il-button">Start Recording</button>
</div>

<p>Note that you may need to authorize the browser to use the microphone. Click "Allow".</p>

<div id="information" class="hidden">
</div>

<div>
    <a href="/TestHomepage" class="il-button hidden" id="continue">Continue</a>
</div>

@section Scripts {
    <script src="~/js/microphone-test.js" asp-append-version="true"></script>
}